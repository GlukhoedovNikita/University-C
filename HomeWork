 1.
#include<iostream>
#include<map>
using namespace std;
int main()
{
	setlocale(0, "RU");
	int N;
	int max = 0;
	cout << "Введите количество человек: " << endl;
	cin >> N;
	map <int, int> name_age;
	map<int, int> ::iterator it;
	cout << "Введите возраст и пол : " << endl;
	for (int i = 0; i < N; i++)
	{
		int V, S;
		cin >> V >> S;
		name_age[V] = S;
	}
	it = name_age.begin();
	for (int i = 0; it != name_age.end(); it++, i++)
	{
		if (it->second == 1)
		{
			if (it->first >= max) max = it->first;
		}
	}
	for (it = name_age.begin(); it != name_age.end(); it++)
	{
		int i = 1;
		if (it->first == max && it->second == 1) cout << i << endl;
		i++;
	}

	system("Pause");
	return 0;
}

