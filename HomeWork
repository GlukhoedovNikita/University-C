 1.
#include<iostream>
#include<map>
using namespace std;
int main()
{
	setlocale(0, "RU");
	int N;
	int max = 0;
	cout << "Введите количество человек: " << endl;
	cin >> N;
	map <int, int> name_age;
	map<int, int> ::iterator it;
	cout << "Введите возраст и пол : " << endl;
	for (int i = 0; i < N; i++)
	{
		int V, S;
		cin >> V >> S;
		name_age[V] = S;
	}
	it = name_age.begin();
	for (int i = 0; it != name_age.end(); it++, i++)
	{
		if (it->second == 1)
		{
			if (it->first >= max) max = it->first;
		}
	}
	for (it = name_age.begin(); it != name_age.end(); it++)
	{
		int i = 1;
		if (it->first == max && it->second == 1) cout << i << endl;
		i++;
	}

	system("Pause");
	return 0;
}

2.
#include<iostream>
using namespace std;
int nod(int a, int b)
{
	return b ? nod(b, a%b) : a;
}
int main()
{
	setlocale(0, "RU");
	int a, b;
	cout << "Введите два числа: " << endl;
	cin >> a >> b;
	cout << nod(a, b) << endl;

	system("Pause");
	return 0;
}
3.
#include<iostream>
using namespace std;
int nod(int a, int b)
{
	return b ? nod(b, a%b) : a;
}
int nok(int a, int b)
{
	return a / nod(a, b)*b;
}
int main()
{
	setlocale(0, "RU");
	int a, b;
	cout << "Введите два числа: " << endl;
	cin >> a >> b;
	cout << nok(a, b) << endl;

	system("Pause");
	return 0;
}
4.
#include<iostream>
using namespace std;
int main()
{
	setlocale(0, "RU");
	int n, m;
	cout << "Введите количество взрослых и дететей в автобусе: " << endl;
	cin >> n >> m;

	if (n > 0)
	{
		if (m-n > 0) cout << n + m-n << endl;
		else cout << n << endl;
		cout << n + m - 1 << endl;
	}
	else cout << "Impossible!" << endl;

	system("Pause");
	return 0;
}
5.
#include<iostream>
using namespace std;
int main()
{
	setlocale(0, "RU");
	int const n=5;
	int A[n][n],k=0;
	for (int i = 0; i < n; i++)
		for (int j = 0; j < 5; j++)
			cin >> A[i][j];
	for (int i = 0; i < n; i++)
		for (int j = 0; j < 5; j++)
			if (A[i][j] == A[j][i]&&A[i][j]==1) k++;
	for (int i = 0; i < n; i++)
	{
		cout << endl;
		for (int j = 0; j < n; j++)
			cout << A[i][j] << "\t";
	}
	cout << k/2;
	system("Pause");
	return 0;
}
